
@{
    ViewBag.Title = "XoaDonHang";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.ValidationSummary(true)
@model BaiCuoiKy.DONDATHANG
<div class="main-panel">
    <div class="content-wrapper">
        <div class="container p-3">
            <div class="row p-4">
                <div>
                    <h2 class="text-primary">Xóa đơn hàng</h2>
                    <hr />
                </div>
            </div>

            @using (Html.BeginForm("XoaDonHang", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(item => item.MaDonHang)
                    @Html.TextBoxFor(item => item.MaDonHang,
                    new
                    {
                        @readonly = "true",
                        type = "text",
                        @class = "form-control form-control-lg",
                    })
                    @Html.ValidationMessageFor(item => item.MaDonHang, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(item => item.KHACHHANG.HoTen)
                    @Html.TextBoxFor(item => item.KHACHHANG.HoTen,
                    new
                    {
                        @readonly = "true",
                        type = "text",
                        @class = "form-control form-control-lg",
                        placeholder = "Tên nhà cung cấp"
                    })
                    @Html.ValidationMessageFor(item => item.KHACHHANG.HoTen, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(item => item.DiaChi)
                    @Html.TextBoxFor(item => item.DiaChi,
                    new
                    {
                        @readonly = "true",
                        type = "text",
                        @class = "form-control form-control-lg",
                        placeholder = "Tên loại sản phẩm"
                    })
                    @Html.ValidationMessageFor(item => item.DiaChi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(item => item.DienThoai)
                    @Html.TextBoxFor(item => item.DienThoai,
                    new
                    {
                        @readonly = "true",
                        type = "text",
                        @class = "form-control form-control-lg",
                        placeholder = "Tên loại sản phẩm"
                    })
                    @Html.ValidationMessageFor(item => item.DienThoai, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(item => item.Logo)
                    @Html.TextBoxFor(item => item.Logo,
                    new
                    {
                        @readonly = "true",
                        type = "text",
                        @class = "form-control form-control-lg",
                        placeholder = "Tên loại sản phẩm"
                    })
                    @Html.ValidationMessageFor(item => item.Logo, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn">
                    <span>Xóa nhà cung cấp</span>
                </button>
            }
        </div>

    </div>
</div>